<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFarm.Views.MainPage">
    
    <ScrollView>
        <!--cuộn màn hình-->
        <VerticalStackLayout>
            <!--sắp xếp các phần tử con theo chiều dọc-->

            
            <!-- Header màu xanh -->
            <Grid
                BackgroundColor="#2E9E43"
                Padding="20"
                RowDefinitions="Auto,Auto,Auto" 
                ColumnDefinitions="*,Auto"> <!-- lưới có 3 hàng, 2 cột-->

                <!-- Thông tin người dùng -->
                <StackLayout Grid.Row="0" Grid.ColumnSpan="2">
                    <Grid
                            BackgroundColor="#2E9E43"
                            Padding="5"
                            ColumnDefinitions="Auto,*">

                            <Frame
                                Grid.Column="0"
                                WidthRequest="45"
                                HeightRequest="45"
                                CornerRadius="50"
                                HasShadow="False"
                                BorderColor="White"
                                BackgroundColor="Transparent">

                                <Image Source="avatar.jpg"
                                   Aspect="AspectFill"
                                   WidthRequest="50"
                                   HeightRequest="50" />
                            </Frame>

                        <!-- Thông tin người dùng (cột 1) -->
                        <StackLayout
                            Grid.Column="1"
                            Padding="10,0,0,0">
                            <Label Text="Mr. MyFarm"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Text="Demo Farm"
                                   FontSize="14"
                                   TextColor="White"/>
                        </StackLayout>
                    </Grid>
                </StackLayout>

                <!-- Ngày tháng -->
                <Label Grid.Row="1" Grid.ColumnSpan="2"
                       Text="Thirday, October 16, 2025"
                       FontSize="18"
                       TextColor="White"
                       Margin="0,10,0,0"/>

                <!-- Dòng thời tiết -->
                <Grid Grid.Row="2" Grid.ColumnSpan="2"
                      ColumnDefinitions="Auto,*,*,*"
                      Margin="0,10,0,0">

                    <StackLayout Orientation="Horizontal" Spacing="5">
                        <Image Source="sunny.png" HeightRequest="24" WidthRequest="24"/>
                        <Label Text="35° Sunny" TextColor="White" FontSize="16"/>
                    </StackLayout>

                    <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="5">
                        <Image Source="wind.png" HeightRequest="24" WidthRequest="24"/>
                        <Label Text="16 km/h" TextColor="White" FontSize="16"/>
                    </StackLayout>

                    <StackLayout Grid.Column="2" Orientation="Horizontal" Spacing="5">
                        <Image Source="humidity.png" HeightRequest="24" WidthRequest="24"/>
                        <Label Text="83%" TextColor="White" FontSize="16"/>
                    </StackLayout>

                </Grid>
            </Grid>

            <!-- Nội dung khác bên dưới -->
            
            <Label Text="📰 Tin tức Nông nghiệp mới nhất"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="DarkGreen"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20" />

            <!-- Khu vực hiển thị bài báo -->
            <StackLayout x:Name="NewsContainer"
                         Margin="10,0,10,20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>